{
  "title": "度量描述符",
  "description": "度量描述符",
  "type": "object",
  "required": [
    "dcmMetricsName",
    "dcmMetricsRetentionPeriod"
  ],
  "properties": {
    "dcmMetricsName": {
      "title": "度量名称",
      "description": "度量名称",
      "type": "string"
    },
    "dicomDescription": {
      "title": "度量描述",
      "description": "没有度量约束的文本描述",
      "type": "string"
    },
    "dcmMetricsRetentionPeriod": {
      "title": "度量保留期",
      "description": "以分钟为单位的度量保留期",
      "type": "integer",
      "default" : 60,
      "minimum": 1
    },
    "dcmUnit": {
      "title": "度量单位",
      "description": "度量数据单位",
      "type": "string"
    }
  }
}
